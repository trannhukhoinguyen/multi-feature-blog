---
export interface Props {
  title: string;
  description: string;
  image?: {
    url: string;
    alt: string;
  };
  type?: "website" | "article";
  canonicalUrl?: string;
}

const {
  title,
  description,
  image = {
    url: "/uploads/house-default.webp",
    alt: "House Name",
  },
  type = "website",
  canonicalUrl,
} = Astro.props;

// Get the canonical URL
const canonicalURL = canonicalUrl || new URL(Astro.url.pathname, Astro.site);

// Get House address and contact info (would come from site config in a real implementation)
const houseInfo = {
  name: "House Name",
  address: {
    streetAddress: "123 Main Street",
    addressLocality: "Anytown",
    addressRegion: "ST",
    postalCode: "12345",
    addressCountry: "US",
  },
  telephone: "+1-555-123-4567",
  email: "info@housename.org",
  url: Astro.site?.toString() || "https://example.com",
};
---

<!-- Basic SEO -->
<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image.url, Astro.site)} />
<meta property="og:image:alt" content={image.alt} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image.url, Astro.site)} />
<meta property="twitter:image:alt" content={image.alt} />

<!-- JSON-LD Schema for House -->
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "House",
    "name": "${houseInfo.name}",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "${houseInfo.address.streetAddress}",
      "addressLocality": "${houseInfo.address.addressLocality}",
      "addressRegion": "${houseInfo.address.addressRegion}",
      "postalCode": "${houseInfo.address.postalCode}",
      "addressCountry": "${houseInfo.address.addressCountry}"
    },
    "telephone": "${houseInfo.telephone}",
    "email": "${houseInfo.email}",
    "url": "${houseInfo.url}"
  }
</script>

{
  type === "article" && (
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Article",
        "headline": "${title}",
        "image": "${new URL(image.url, Astro.site)}",
        "description": "${description}",
        "publisher": {
          "@type": "Organization",
          "name": "${houseInfo.name}",
          "logo": {
            "@type": "ImageObject",
            "url": "${new URL("/uploads/logo.png", Astro.site)}"
          }
        },
        "url": "${canonicalURL}",
        "mainEntityOfPage": {
          "@type": "WebPage",
          "@id": "${canonicalURL}"
        }
      }
    </script>
  )
}
